{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx"
  ],
  "typeRoots": ["./src/typings", "./node_modules/@types/"]
}
