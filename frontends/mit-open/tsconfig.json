{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "declaration": true,
    "outDir": "./build",
    "rootDirs": ["./src", "./.storybook"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx"
  ],
  "typeRoots": ["./src/typings", "./node_modules/@types/"]
}
